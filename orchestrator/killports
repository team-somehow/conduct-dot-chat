#!/bin/bash
# file: /usr/local/bin/kill_ports

RED='\033[0;31m'
NC='\033[0m' # No Color

# Kill ports 3001-3006
for port in {3001..3006}; do
  echo -e "Killing ${RED}port $port${NC}..."
  lsof -ti tcp:$port | xargs kill 2>/dev/null
done

# Kill port 8080
echo -e "Killing ${RED}port 8080${NC}..."
lsof -ti tcp:8080 | xargs kill 2>/dev/null

echo "Done killing ports!"